@model COMP003B.Final.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameDescription)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.GameId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="col-md-4">
    <h4>Developers</h4>
    <ul>
        @foreach (Developer developer in ViewBag.Developers)
        {
            <li>@developer.DeveloperName</li>
        }
    </ul>
</div>
<div class="col-md-4">
    <h4>Platforms</h4>
    <ul>
        @foreach (Platform platform in ViewBag.Platforms)
        {
            <li>@platform.PlatformName</li>
        }
    </ul>
</div>
<div class="col-md-4">
    <h4>Ratings</h4>
    <ul>
        @foreach (Rating rating in ViewBag.Ratings)
        {
            <li>@rating.RatingNum</li>
        }
    </ul>
</div>