@model COMP003B.Final.Models.Developer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Developer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeveloperName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeveloperName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DeveloperId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="col-md-4">
    <h4>Games</h4>
    <ul>
        @foreach (Game game in ViewBag.Games)
        {
            <li>@game.GameName</li>
        }
    </ul>
</div>
